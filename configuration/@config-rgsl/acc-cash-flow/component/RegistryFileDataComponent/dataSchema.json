{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "smallPaymentNumber",
        "paymentDate",
        "paymentAmount"
    ],
    "properties": {
        "smallPaymentNumber": {
            "type": "string",
            "description": "small payment number."
        },
        "paymentDate": {
            "type": "string",
            "description": "client payment date."
        },
        "payerFullName": {
            "type": "string",
            "description": "payer full name."
        },
        "paymentDescription": {
            "type": "string",
            "description": "payment description."
        },
        "contractBeginDate": {
            "type": "string",
            "description": "contract begin date."
        },
        "productName": {
            "type": "string",
            "description": "product name."
        },
        "paymentAmount": {
            "type": "number",
            "description": "payment amount."
        },
        "allocationAmount": {
            "type": "number",
            "description": "allocation amount."
        },
        "currencyCode": {
            "type": "string",
            "description": "currency code."
        },
        "contractDuration": {
            "type": "string",
            "description": "contract duration."
        },
        "additionalInformation": {
            "type": "string",
            "description": "additional information."
        },
        "segment": {
            "type": "string",
            "description": "segment."
        },
        "payerBirthday": {
            "type": "string",
            "description": "payer date of birth."
        },
        "payerEMail": {
            "type": "string",
            "description": "payer e-mail."
        }
    }
}
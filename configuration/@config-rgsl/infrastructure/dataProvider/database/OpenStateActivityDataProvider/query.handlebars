SELECT ac.ACTIVITY_ID,
	  ac.USER_GROUP_CODE,
       u.USERNAME
FROM BFX.ACTIVITY ac
JOIN BFX.ENTITY_REF ref ON ref.ENTITY_REF_ID = ac.ENTITY_REF_ID
JOIN ORG.APPLICATION_USER u ON u.APPLICATION_USER_ID = ac.ASSIGNED_USER_ID
JOIN CFG.PROCESS_STATE st ON st.PROCESS_STATE_ID = ac.DOCUMENT_STATE
WHERE ac.ACTIVITY_STATUS = 'Open'
  AND ac.ACTIVITY_TYPE = 'State'
  AND ref.ENTITY_ID = @entityId
  {{#if parameters.stateCode}}
  AND st.CODE_NAME = @stateCode
  {{/if}}
  
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Related Documents returned by data provider.",
    "properties": {
        "related": {
            "type": "object",
            "description": "Related Documents",
            "properties": {
                "author": {
                    "type": "string",
                    "description": "Comment author"
                },
                "authorApplicationUserGroup ": {
                    "type": "string",
                    "description": "Comment author application user group"
                },
                "comment": {
                    "type": "string",
                    "description": "Comment"
                },
                "createdOn": {
                    "type": "string",
                    "aiFormat": "date-time",
                    "description": "Date when comment was created"
                },
                "deleted": {
                    "type": "boolean",
                    "description": "Flag if comment is deleted"
                },
                "displayName": {
                    "type": "string",
                    "description": "Fullname of comment author"
                },
                "id": {
                    "type": "integer",
                    "desciption": "Comment id"
                },
                "modifiedOn": {
                    "type": "string",
                    "aiFormat": "date-time",
                    "desciption": "Date when comment was last modified"
                },
                "canViewAuthor": {
                    "type": "boolean",
                    "description": "Flag if user can see author name"
                },
                "sequenceNumber": {
                    "type": "integer",
                    "desciption": "Sequence number"
                },
                "originalCommentId": {
                    "type": "integer",
                    "desciption": "Original comment id"
                }
            }
        }
    }
}
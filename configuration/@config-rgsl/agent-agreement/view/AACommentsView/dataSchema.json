{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CommentsView",
    "description": "Schema describing comments view",
    "type": "array",
    "additionalProperties": false,
    "items": {
        "type": "object",
        "properties": {
            "author": {
                "type": "string",
                "description": "Comment author"
            },
            "comment": {
                "type": "string",
                "description": "Comment"
            },
            "createdOn": {
                "type": "string",
                "aiFormat": "date-time",
                "description": "Date when comment was created"
            },
            "deleted": {
                "type": "boolean",
                "description": "Flag if comment is deleted"
            },
            "displayName": {
                "type": "string",
                "description": "Fullname of comment author"
            },
            "id": {
                "type": "integer",
                "desciption": "Comment id"
            },
            "modifiedOn": {
                "type": "string",
                "aiFormat": "date-time",
                "desciption": "Date when comment was last modified"
            }
        }
    }
}
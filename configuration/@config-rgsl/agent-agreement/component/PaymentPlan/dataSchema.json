{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Payment Plan",
    "description": "Data schema describing Payment Plan",
    "type": "array",
    "additionalProperties": false,
    "aiDataEnrichment": [
        {
            "name": "setPaymentPlanEnrichment"
        }
    ],
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "paymentPeriodStart": {
                "type": "string",
                "aiFormat": "date",
                "aiTitle": "paymentPeriodStart"
            },
            "paymentPeriodEnd": {
                "type": "string",
                "aiFormat": "date",
                "aiTitle": "paymentPeriodEnd"
            },
            "paymentExpirationDate": {
                "type": "string",
                "aiFormat": "date",
                "aiTitle": "paymentExpirationDate"
            },
            "paymentGraceDate": {
                "type": "string",
                "aiFormat": "date",
                "aiTitle": "paymentGraceDate"
            },
            "paymentGraceDateProlongation": {
                "type": "string",
                "aiFormat": "date",
                "aiTitle": "paymentGraceDateProlongation"
            },
            "payer": {
                "type": "string",
                "aiTitle": "payer"
            },
            "paymentSum": {
                "type": "number",
                "aiTitle": "paymentSum"
            },
            "currency": {
                "type": "string",
                "aiTitle": "currency"
            },
            "partyCode": {
                "type": "string",
                "aiTitle": "partyCode"
            },
            "partyType": {
                "type": "string",
                "aiTitle": "partyType"
            },
            "paymentMandatory": {
                "type": "number",
                "aiTitle": "paymentMandatory"
            },
            "insuranceYear": {
                "type": "integer",
                "aiTitle": "insuranceYear"
            },
            "isFirstInstallment": {
                "type": "boolean",
                "aiTitle": "isFirstInstallment"
            }
        }
    }
}
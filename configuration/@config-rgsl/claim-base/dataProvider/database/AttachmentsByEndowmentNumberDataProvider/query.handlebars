SELECT ud.UNIVERSAL_DOCUMENT_ID,
	   att.ATTACHMENT_ID,
	   att.ATTACHMENT_TYPE,
	   att.NAME as ATTACHMENT_NAME,
	   att.FILE_METADATA_ID,
	   att.SYS_CREATED_ON 
FROM
BFX.UNIVERSAL_DOCUMENT ud
JOIN BFX.ENTITY_REF eref ON eref.ENTITY_ID = ud.UNIVERSAL_DOCUMENT_ID
JOIN BFX.ATTACHMENT_RELATED_ENTITY attref on attref.ENTITY_REF_ID = eref.ENTITY_REF_ID
JOIN BFX.ATTACHMENT att on att.ATTACHMENT_ID = attref.ATTACHMENT_ID
WHERE ud.UNIVERSAL_DOCUMENT_NUMBER = @endowmentNumber
SELECT CONCAT(ig.SUBGROUP_CODE_LEVEL_3, ' ' ,ISNULL(ig.SUBGROUP_DESCRIPTION_LEVEL_3, N'без названия')) AS DESCRIPTION,
	ig.SUBGROUP_CODE_LEVEL_3 AS CODE
FROM BFX_IMPL.INJURY_GENERAL ig
WHERE 1 = 1
{{#if parameters.group}}
AND ig.INJURY_GROUP = @group
{{/if}}
{{#if parameters.subgroupCodeLevel1}}
AND ig.SUBGROUP_CODE_LEVEL_1 = @subgroupCodeLevel1
{{/if}}
{{#if parameters.subgroupCodeLevel2}}
AND ig.SUBGROUP_CODE_LEVEL_2 = @subgroupCodeLevel2
{{/if}}
{{#if parameters.subgroupDescriptionLevel3}}
AND ig.SUBGROUP_DESCRIPTION_LEVEL_3 LIKE @subgroupDescriptionLevel3
{{/if}}
{{#if parameters.ruleCode}}
AND ig.RULE_CODE = @ruleCode
{{/if}}
ORDER BY ig.ID ASC
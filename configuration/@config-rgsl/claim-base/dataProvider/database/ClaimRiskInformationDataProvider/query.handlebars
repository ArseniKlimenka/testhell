SELECT
	clmrS.CODE,
	r.TYPE,
	clmrS.BUSINESS_LINE,
	r.SHORT_DESCRIPTION,
	r.FULL_DESCRIPTION,
	r.NOTE,
	r.PAYMENT_FORM,
	r.RISKS_GROUP,
	r.FNS_TYPE
FROM CLM.CLAIM clm
JOIN CLM_IMPL.CLM_HUB clmH ON clmH.CLAIM_NUMBER = clm.CLAIM_NUMBER
JOIN CLM_IMPL.CLM_RISK_SAT_LATEST clmrS ON clmrS.CLM_RISK_HKEY = clmH.CLM_HKEY
JOIN BFX_IMPL.RISKS r ON r.CODE = clmrS.CODE
WHERE clm.CLAIM_NUMBER = @claimNumber
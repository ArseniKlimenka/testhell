{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "properties": {
        "criteria": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "username": {
                    "type": "string"
                },
                "general": {
                    "type": "string"
                },
                "userGroupCode": {
                    "type": "string"
                },
                "expireDateFrom": {
                    "type": "string",
                    "aiFormat": "date"
                },
                "expireDateTo": {
                    "type": "string",
                    "aiFormat": "date"
                }
            }
        },
        "sort": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string",
                        "isAscending": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Work calendar data source input schema",
    "properties": {
        "criteria": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "freeText": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "skipSystemCalendars": {
                    "type": "boolean"
                },
                "skipUserCalendars": {
                    "type": "boolean"
                },
                "isActive": {
                    "type": "boolean"
                },
                "isDefault": {
                    "type": "boolean"
                }
            }
        },
        "sort": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "descending": {
                        "type": "boolean"
                    },
                    "fieldName": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
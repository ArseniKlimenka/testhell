{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Global rule input",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "metadata": {
            "type": "object",
            "description": "Meta data",
            "properties": {
                "state": {
                    "type": "object",
                    "description": "State",
                    "properties": {
                        "code": {
                            "type": "string"
                        }
                    }
                },
                "originalNumber": {
                    "type": "string"
                },
                "configuration": {
                    "type": "object",
                    "properties": {
                        "codeName": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        },
                        "dimensions": {
                            "type": "object",
                            "properties": {
                                "contractType": {
                                    "type": "string"
                                },
                                "productCode": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "commonBody": {
            "type": "object"
        }
    }
}
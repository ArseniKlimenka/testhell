            "allOf": [
                {
                    "$ref": "component:IssueForm"
                },
                {
                    "aiAdditionalContext": {
                        "name": "policyHolder",
                        "$data": "/policyHolder",
                        "source": "Body"
                    }
                },
                {
                    "aiAdditionalContext": {
                        "name": "insuredPerson",
                        "$data": "/insuredPerson",
                        "source": "Body"
                    }
                },
                {
                    "aiAdditionalContext": {
                        "name": "futureContractNumber",

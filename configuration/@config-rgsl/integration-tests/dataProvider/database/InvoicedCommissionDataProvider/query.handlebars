select
	CONTRACT_NUMBER,
	DUE_DATE,
	POSTING_DATE,
	OBJECT_CODE,
	ITEM_NO,
	CURRENCY_CODE,
	BASE_AMOUNT,
	AA_COMM_RATE,
	DOC_COMM_RATE,
	CALC_COMM_AMOUNT
from pas_impl.P_INVOICED_COMMISSION
where 1=1
	and COMM_TYPE = 1
	and CONTRACT_NUMBER = @contractNumber
order by LOAD_DATE, sign(base_amount), DUE_DATE, ITEM_NO

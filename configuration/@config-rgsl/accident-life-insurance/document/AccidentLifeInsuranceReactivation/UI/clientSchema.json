{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "policyData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "policyNumber": {
                    "type": "string"
                },
                "policyProductGroup": {
                    "$ref": "component:ProductGroup"
                },
                "insuranceProductName": {
                    "type": "string"
                },
                "contractCurrencyName": {
                    "type": "string"
                },
                "policyHolderFullName": {
                    "type": "string"
                },
                "policyIssueDate": {
                    "type": "string",
                    "aiFormat": "date"
                },
                "policyStartDate": {
                    "type": "string",
                    "aiFormat": "date"
                },
                "policyEndDate": {
                    "type": "string",
                    "aiFormat": "date"
                }
            }
        }
    }
}
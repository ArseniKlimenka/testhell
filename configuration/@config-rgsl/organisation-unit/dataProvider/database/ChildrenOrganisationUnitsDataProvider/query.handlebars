WITH CHILDREN (ORGANISATION_UNIT_ID, ORGANISATION_UNIT_CODE, PARENT_ID)
AS
(
SELECT OUP.ORGANISATION_UNIT_ID, OUP.ORGANISATION_UNIT_CODE, OUP.PARENT_ID
  FROM ORG.ORGANISATION_UNIT OUP
 WHERE OUP.ORGANISATION_UNIT_CODE = @orgUnitCode
UNION ALL
SELECT OU.ORGANISATION_UNIT_ID, OU.ORGANISATION_UNIT_CODE, OU.PARENT_ID
  FROM ORG.ORGANISATION_UNIT OU
    JOIN CHILDREN C ON OU.PARENT_ID = C.ORGANISATION_UNIT_ID
)
SELECT ORGANISATION_UNIT_ID, ORGANISATION_UNIT_CODE, PARENT_ID
  FROM CHILDREN
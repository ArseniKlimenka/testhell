{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Party data source input schema",
    "type": "object",
    "properties": {
        "criteria": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "partyCodes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "showDuplicates": {
                    "type": "boolean",
                    "description": "Show party duplicates"
                }
            }
        }
    }
}
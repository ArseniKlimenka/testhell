{
    "id": "basicNaturalPerson.ui-schema.json",
    "type": "GridLayout",
    "numberOfColumns": 4,
    "formProperties": {
        "events": {
            "onLoad": "onLoad"
        }
    },
    "elements": [
        {
            "type": "HeaderContentLayout",
            "fixedPosition": true,
            "elements": [
                {
                    "type": "Group",
                    "width": 2,
                    "stackContent": "Left",
                    "elements": [
                        {
                            "type": "OutputText",
                            "skipTranslate": true,
                            "template": "{{#style 'bold'}}{{#i18n}}{{expr ConfigurationCodeName}}@Title{{/i18n}}:{{/style}}",
                            "value": {
                                "$ref": "#"
                            },
                            "textStyle": {
                                "uppercase": true,
                                "textSize": "Normal",
                                "textColor": "Black"
                            }
                        },
                        {
                            "type": "OutputText",
                            "skipTranslate": true,
                            "value": {
                                "$ref": "#/properties/Body/properties/Code"
                            },
                            "textStyle": {
                                "uppercase": true,
                                "textSize": "Normal",
                                "textColor": "Blue"
                            },
                            "elementId": "ai-info-control",
                            "defaultValue": ""
                        }
                    ]
                },
                {
                    "type": "Group",
                    "width": 2,
                    "stackContent": "Right",
                    "elements": [
                        {
                            "type": "Button",
                            "value": {
                                "$ref": "#"
                            },
                            "onClick": [
                                {
                                    "commandType": "executeAction",
                                    "actionName": "closeDialog"
                                }
                            ],
                            "backgroundColor": "BackgroundColor",
                            "label": "Cancel",
                            "labelColor": "Primary",
                            "elementId": "closeDialogButton",
                            "rule": {
                                "effect": "SHOW",
                                "condition": {
                                    "type": "LEAF",
                                    "value": {
                                        "$ref": "#/properties/viewContext/properties/isPopUp"
                                    },
                                    "expectedValue": true
                                }
                            }
                        },
                        {
                            "type": "Button",
                            "value": {
                                "$ref": "#"
                            },
                            "onClick": [
                                {
                                    "commandType": "executeAction",
                                    "actionName": "savePerson"
                                }
                            ],
                            "label": "Save",
                            "elementId": "savePersonButton"
                        }
                    ]
                }
            ]
        },
        {
            "type": "GridLayout",
            "numberOfColumns": 12,

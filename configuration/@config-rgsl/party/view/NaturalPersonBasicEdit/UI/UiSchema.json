                    "type": "GridLayout",
                    "numberOfColumns": 2,
                    "elements": [
                        {
                            "type": "TabLayout",
                            "elements": [
                                {
                                    "type": "Tab",
                                    "tabType": "error",
                                    "additionalInfo": {
                                        "display": "ValidationErrorsCount"
                                    },
                                    "elements": [
                                        {
                                            "type": "ValidationSummary",
                                            "elementId": "RequiredPropertiesValidations"
                                        }
                                    ],
                                    "elementId": "tab-error",
                                    "icon": {
                                        "name": "Bell",
                                        "size": "Large"

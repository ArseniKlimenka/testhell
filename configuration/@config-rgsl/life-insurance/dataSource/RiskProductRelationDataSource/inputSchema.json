{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "criteria": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "productCode": {
                    "type": "string"
                },
                "relationType": {
                    "type": "string"
                },
                "parentRisk": {
                    "type": "string"
                },
                "additionalBeneficiariesOnly": {
                    "type": "boolean"
                },
                "fullRiskOutput": {
                    "type": "boolean"
                },
                "searchText": {
                    "type": "string"
                }
            }
        },
        "sort": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "descending": {
                        "type": "boolean"
                    },
                    "fieldName": {
                        "type": "string"
                    }
                }
            }
        }
    }
}

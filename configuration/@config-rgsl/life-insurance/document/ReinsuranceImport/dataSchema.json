{
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Document guiding the import of reinsurance.",
    "type": "object",
    "aiDeepRequired": [
        "/file/fileId",
        "/file/fileName"
    ],
    "aiDataEnrichment": [
        {
            "name": "GetLoadedDataErrors",
            "dataSource": "LoadDataErrorsDataSource"
        }
    ],
    "properties": {
        "file": {
            "$ref": "component:FileUpload"
        },
        "sourceFileFormatData": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "fileFormat": {
                        "type": "integer"
                    },
                    "formatName": {
                        "type": "string"
                    }
                }
            }
        },
        "sourceFileFormat": {
            "type": "integer"
        },
        "summary": {
            "type": "object",
            "properties": {
                "contractNumber":{
                    "type":"string"
                },
                "policyYearNumber":{
                    "type":"integer"
                },
                "reinsurerShare":{
                    "type":"number"
                },
                "reinsurerCode":{
                    "type":"integer"
                },
                "reinsuranceNumber":{
                    "type":"string"
                },
                "version":{
                    "type":"integer"
                }
            }         
        }
    },
    "required": [
        "file",
        "sourceFileFormat"
    ],
    "additionalProperties": false
}
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "DeclarationSportEdit",
    "type": "object",
    "additionalProperties": true,
    "required" : [
        "itemText",
        "departament"
    ],
    "properties": {
        "itemNumber": {
            "type": "string"
        },
        "itemText": {
            "type": "string",
            "aiTitle": "itemText"
        },
        "departament": {
            "type": "string",
            "aiTitle": "departament",
            "enum": [
                "underwriting",
                "compliance",
                "legal",
                "block",
                "podft"
            ]
        },
        "agreementPolicyHolder": {
            "type": "boolean"
        },
        "commentPolicyHolder": {
            "type": "string"
        },
        "agreementInsuredPerson": {
            "type": "boolean"
        },
        "commentInsuredPerson": {
            "type": "string"
        },
        "itemTextID": {
            "type": "string"
        },
        "personID": {
            "type": "string"
        },
        "productCode": {
            "type": "string"
        }
    }
}
SELECT
	fs.ID,
	fs.CODE,
	fs.DESCRIPTION
FROM BFX_IMPL.FUND_STATUS fs
WHERE 1 = 1
{{#if parameters.id}}
AND fs.ID = @ID
{{/if}}
{{#if parameters.code}}
AND fs.CODE = @code
{{/if}}
{{#if parameters.codes}}
AND fs.CODE IN (@codes)
{{/if}}
{{#if parameters.description}}
AND fs.DESCRIPTION LIKE @description
{{/if}}
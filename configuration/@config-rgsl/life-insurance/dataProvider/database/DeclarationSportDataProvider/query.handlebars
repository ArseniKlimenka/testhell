SELECT DS.ITEM_NUMBER,
       DS.ITEM_TEXT_ID,
       DSQ.ITEM_TEXT,
       DS.DEPARTAMENT
FROM BFX_IMPL.DECLARATION_SPORT_QUESTIONS DSQ, 
	BFX_IMPL.DECLARATION_SPORT DS
WHERE 1=1
AND DSQ.ID = DS.ITEM_TEXT_ID
   AND DS.PRODUCT_CODE = @productCode
   AND CONVERT(Date, @issueDate) BETWEEN DS.ACTIVE_FROM_DATE and DS.ACTIVE_TO_DATE

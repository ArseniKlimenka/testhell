SELECT p.CODE, 
       p.PRODUCT_GROUP, 
       p.DESCRIPTION,
       p.SALES_SEGMENT
FROM BFX_IMPL.PRODUCTS p
WHERE 1 = 1
{{#if parameters.code}}
AND p.CODE = @code
{{/if}}
{{#if parameters.codes}}
AND p.CODE IN (@codes)
{{/if}}
{{#if parameters.description}}
AND p.DESCRIPTION LIKE @description
{{/if}}
{{#if parameters.productGroup}}
AND p.PRODUCT_GROUP = @productGroup
{{/if}}
{{#if parameters.searchText}}
AND (p.DESCRIPTION LIKE @searchText OR p.CODE LIKE @searchText)
{{/if}}
SELECT DM.ITEM_NUMBER,
       DM.ITEM_TEXT_ID,
       DMQ.ITEM_TEXT,
       DM.DEPARTAMENT
FROM BFX_IMPL.DECLARATION_MAIN_QUESTIONS DMQ,
	 BFX_IMPL.DECLARATION_MAIN DM
WHERE 1=1
   AND DMQ.ID = DM.ITEM_TEXT_ID
   AND DM.PRODUCT_CODE = @productCode
   AND CONVERT(Date, @issueDate) BETWEEN DM.ACTIVE_FROM_DATE and DM.ACTIVE_TO_DATE

SELECT ct.CODE,
	   ct.DESCRIPTION
FROM BFX_IMPL.INQUIRY_REASON ct
WHERE 1 = 1
{{#if parameters.code}}
AND ct.CODE = @code
{{/if}}
{{#if parameters.codes}}
AND ct.CODE IN (@codes)
{{/if}}
{{#if parameters.description}}
AND ct.DESCRIPTION LIKE @description
{{/if}}
{{#if parameters.descriptions}}
AND ct.DESCRIPTION IN (@descriptions)
{{/if}}
ORDER BY ct.CODE ASC